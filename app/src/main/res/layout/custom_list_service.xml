<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp"
    android:background="@color/box_custom_background"

    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/box_background"
        android:orientation="horizontal"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="8dp"
            android:layout_height="match_parent"
            android:background="#00ffff"
            android:orientation="vertical">

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:padding="8dp">

                <TextView
                    android:id="@+id/tvListServiceDate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="tvListServiceDate"
                    android:textSize="@dimen/h3" />

                <TextView
                    android:id="@+id/tvListServiceOdometer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:text="tvListServiceOdometer"
                    android:textSize="@dimen/h5" />

                <TextView
                    android:id="@+id/tvListLicensePlate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:text="tvListLicensePlate"
                    android:textSize="@dimen/h5" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:padding="8dp">

                <TextView
                    android:id="@+id/tvListServiceCost"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="end"
                    android:text="tvListServiceCost"
                    android:textSize="@dimen/h3" />

                <TextView
                    android:id="@+id/tvListServiceName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:gravity="end"
                    android:text="tvListServiceName"
                    android:textSize="@dimen/h5" />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
</RelativeLayout>