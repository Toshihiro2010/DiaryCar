<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">

        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColor">#ff0000</item>
        <item name="colorButtonNormal">#af74f7</item>
    </style>

    <style name="ButtonOkTheme" parent="Widget.AppCompat.Button.Colored">
        <item name="colorButtonNormal">#065417</item>
        <item name="android:textColor">#ffffff</item>
    </style>

    <style name="ButtonCancelTheme" parent="Widget.AppCompat.Button.Colored">
        <item name="colorButtonNormal">#ff0000</item>
        <item name="android:textColor">#ffffff</item>
    </style>

    <style name="ButtonThaiTheme" parent="Widget.AppCompat.Button.Colored">
        <item name="android:textColor">#ffffff</item>
        <item name="android:drawable">@drawable/thai_flag</item>
    </style>

    <style name="ButtonInputDelete" parent="Widget.AppCompat.Button.Colored">

        <item name="android:imageButtonStyle">@drawable/custom_layer_list</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


</resources>
